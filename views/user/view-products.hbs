<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 27rem;">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height: 15rem;">
                    <div class="card-body">
                        <h4 class="card-title">{{this.Name}}</h5>
                        <h6>Rs:{{this.Price}}</h6>
                        <p class="card-text">
                            {{this.Description}}
                        </p>
                    </div>
                    <div>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" style="">Add To Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>