<section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 mt-5">
                <div class="card" style="height: 24rem; width: 15rem;">
                    <img src="/product-images/{{this.product._id}}.jpg" class="card-img-top" alt="..." style="height: 15rem;">
                    <h4 class="card-title mt-3 text-center">{{this.product.Name}}</h5>
                    <h6 class="mt-3" style="margin-left: 10px;">Price: {{this.product.Price}}Rs</h6>
                    <h6 class="card-text mt-3" style="margin-left: 10px;"> Quantity: {{this.quantity}}</h6>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>